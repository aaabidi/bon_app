<p id="notice"><%= notice %></p>

<h1>Food Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>User</th>
      <th>Title</th>
      <th>Body</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_reviews.each do |food_review| %>
      <tr>
        <td><%= food_review.food %></td>
        <td><%= food_review.user %></td>
        <td><%= food_review.title %></td>
        <td><%= food_review.body %></td>
        <td><%= food_review.rating %></td>
        <td><%= link_to 'Show', food_review %></td>
        <td><%= link_to 'Edit', edit_food_review_path(food_review) %></td>
        <td><%= link_to 'Destroy', food_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food Review', new_food_review_path %>
