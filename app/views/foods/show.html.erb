<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @food.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @food.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @food.user_id %>
</p>

<h2>Food Reviews</h2>
<% @food.food_review.each do |review| %>
  <p>
    <strong>Reviewer:</strong>
    <%= review.reviewer %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= review.rating %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= review.tags %>
  </p>
<% end %>

<h2>New Comment</h2>
<%= form_for([@food, @food.food_review.build]) do |f| %>
  <p>
    <%= f.label :reviewer %>
    <br>
    <%= f.text_field :reviewer %>
  </p>

  <p>
    <%= f.label :rating %>
    <br/>
    <%= f.range_field :rating, in: 1..5, step: 1%>
  </p>

  <p>
    <%= f.label :tags %>
    <br/>
    <%= f.text_field :tags %>
  </p>

  <p>
    <%=f.submit%>
  </p>
<% end %>

<%= link_to 'Edit', edit_food_path(@food) %>
<%= link_to 'Back', foods_path %>
